<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff191319"
    android:clickable="true"
    android:longClickable="true" >

    <TextView
        android:id="@+id/msgLabel"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/front"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/tvz"
        android:layout_x="248dp"
        android:layout_y="251dp"
        android:text="bluetooth connectivity information"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/foundSpin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_x="2dp"
        android:layout_y="2dp" />

    <TextView
        android:id="@+id/tvx"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/front"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/tvy"
        android:layout_x="69dp"
        android:layout_y="255dp"
        android:text="X"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/sensorVal"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/front"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/tvx"
        android:layout_x="120dp"
        android:layout_y="257dp"
        android:text="00"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvz"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/front"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/sensorVal"
        android:layout_x="177dp"
        android:layout_y="265dp"
        android:text="Z"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foundSpin"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/a1up"
        android:layout_x="325dp"
        android:layout_y="51dp"
        android:text="ARM 2" />

    <Button
        android:id="@+id/back"
        android:layout_width="161dp"
        android:layout_height="169dp"
        android:layout_above="@+id/msgLabel"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/a2up"
        android:background="#ff91070a"
        android:longClickable="true"
        android:minHeight="80dp"
        android:minWidth="80dp"
        android:onClick="back"
        android:text="Backward"
        android:textOff="DISCONNECTED" />

    <TextView
        android:id="@+id/arm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/a1up"
        android:layout_marginLeft="18dp"
        android:text="ARM 1" />

    <Button
        android:id="@+id/a1down"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/a2down"
        android:layout_toLeftOf="@+id/textView2"
        android:background="#ff333333"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:text="DOWN" />

    <TextView
        android:id="@+id/tvy"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/front"
        android:layout_alignLeft="@+id/front"
        android:text="Y"
        android:textSize="16sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/a1up"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/front"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/front"
        android:background="#ff333333"
        android:minHeight="50dp"
        android:minWidth="60dp"
        android:text="UP" />

    <Button
        android:id="@+id/a2down"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/msgLabel"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/a1down"
        android:background="#ff333333"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:text="DOWN" />

    <Button
        android:id="@+id/a2up"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/a1up"
        android:layout_alignBottom="@+id/a1up"
        android:layout_alignLeft="@+id/a2down"
        android:background="#ff333333"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:text="UP" />

    <Button
        android:id="@+id/front"
        android:layout_width="161dp"
        android:layout_height="169dp"
        android:layout_alignLeft="@+id/foundSpin"
        android:layout_below="@+id/arm1"
        android:layout_marginLeft="16dp"
        android:background="#ff91070a"
        android:longClickable="true"
        android:minHeight="80dp"
        android:minWidth="80dp"
        android:onClick="front"
        android:text="Forward"
        android:textOff="DISCONNECTED"
        android:visibility="visible" />

</RelativeLayout>